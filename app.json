{
  "expo": {
    "name": "Budget Tracker",
    "slug": "budgetTracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/main-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0C1A34"
      },
      "package": "com.nithilesh.budgettracker"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/main-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/adaptive-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0C1A34"
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "45fdaa82-a4f3-4875-8bbb-a7952744dc01"
      }
    },
    "owner": "vspazetech"
  }
}
